<robot name="gripper_inspire" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="gripper_inspire" params="parent *origin  name:=gripper_inspire">
        <xacro:property name="M_PI" value="3.1415926535897931" />

        <joint name="${name}_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="${name}_body_link" />
        </joint>

        <link name="${name}_body_link">
            <inertial>
                <origin rpy="0 0 0" xyz="1.5645E-05 -4.1843E-06 0.038" />
                <mass value="0.072633" />
                <inertia ixx="5.095E-05" ixy="-4.256E-14" ixz="2.0229E-08" iyy="6.0883E-05"
                    iyz="-4.5583E-09" izz="1.933E-05" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_body_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="1 1 1 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_body_link.stl" />
                </geometry>
            </collision>
        </link>
        <link name="${name}_left_link_1">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.018807 -0.0090021 -0.0046901" />
                <mass value="0.010721" />
                <inertia ixx="5.1508E-07" ixy="1.2231E-10" ixz="2.8973E-07" iyy="1.5709E-06"
                    iyz="7.2401E-11" izz="1.6904E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_left_link_1.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.79216 0.81961 0.93333 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_left_link_1.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="${name}_left_joint_1" type="prismatic">
            <origin rpy="${M_PI} ${-M_PI/2} 0" xyz="-0.034907 -0.009 0.12953" />
            <parent link="${name}_body_link" />
            <child link="${name}_left_link_1" />
            <axis xyz="-0.00597 0 -0.99998" />
            <limit effort="0" lower="-0.035" upper="0" velocity="0" />
        </joint>
        <link name="${name}_right_link_1">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.018807 0.0089979 -0.0046901" />
                <mass value="0.010721" />
                <inertia ixx="5.1508E-07" ixy="1.2231E-10" ixz="2.8973E-07" iyy="1.5709E-06"
                    iyz="7.2401E-11" izz="1.6904E-06" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_right_link_1.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.79216 0.81961 0.93333 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh
                        filename="package://galbot_description/meshes/gripper/gripper_inspire_right_link_1.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="${name}_right_joint_1" type="prismatic">
            <origin rpy="${M_PI} ${-M_PI/2} ${M_PI}" xyz="0.034907 -0.009 0.12953" />
            <parent link="${name}_body_link" />
            <child link="${name}_right_link_1" />
            <axis xyz="0.00597 0 0.99998" />
            <limit effort="0" lower="0" upper="0.035" velocity="0" />
            <!-- mimic not supported in isaac sim 2023.1.0-hotfix  -->
            <!-- <mimic joint="${name}_left_joint_1" multiplier="-1" offset="0" /> -->
        </joint>

        <!-- Tool Center Point -->
        <link name="${name}_tcp_frame" />
        <joint name="tcp_joint" type="fixed">
            <origin rpy="${-M_PI/2} ${-M_PI/2} 0" xyz="0 0 0.13751" />
            <parent link="${name}_body_link" />
            <child link="${name}_tcp_frame" />
            <axis xyz="0 0 0" />
        </joint>
    </xacro:macro>
</robot>

 