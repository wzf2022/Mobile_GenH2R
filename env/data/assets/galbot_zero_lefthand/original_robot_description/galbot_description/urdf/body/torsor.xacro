<robot name="torsor" xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:macro name="torsor"
        params="parent *origin  name:=torsor">
        <xacro:property name="M_PI" value="3.1415926535897931" />

        <joint name="${name}_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="lift_base_link" />
        </joint>

        <link name="lift_base_link">

            <inertial>
                <origin rpy="0 0 0" xyz="-0.02579 8.6701E-05 0.40292" />
                <mass value="6.2299" />
                <inertia ixx="0.29388" ixy="-3.7312E-07" ixz="-7.8474E-05" iyy="0.28323"
                    iyz="-3.0503E-05" izz="0.014664" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/body/lift_base_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.75294 0.75294 0.75294 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/body/lift_base_link.stl" />
                </geometry>
            </collision>

        </link>

        <link name="body_lift_link">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.042686 -1.1977E-05 0.16212" />
                <mass value="3.3336" />
                <inertia ixx="0.025094" ixy="6.0022E-07" ixz="0.0002003" iyy="0.02006"
                    iyz="1.6489E-06" izz="0.0091015" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/body/body_lift_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.89804 0.91765 0.92941 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/body/body_lift_link.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="lift_joint" type="prismatic">
            <origin rpy="0 0 0" xyz="-0.1015 0 0.1511" />
            <parent link="lift_base_link" />
            <child link="body_lift_link" />
            <axis xyz="0 0 1" />
            <limit effort="0" lower="0" upper="0.7" velocity="0.02" />
        </joint>
    </xacro:macro>
</robot>