<robot name="galbot_head" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:macro name="head" params="parent *origin name:=head">
        <xacro:property name="M_PI" value="3.1415926535897931" />

        <joint name="${name}_joint" type="fixed">
            <xacro:insert_block name="origin" />
            <parent link="${parent}" />
            <child link="head_link" />
        </joint>

        <link name="head_link">
            <inertial>
                <origin rpy="0 0 0" xyz="2.8174E-05 4.4192E-05 0.026611" />
                <mass value="0.34013" />
                <inertia ixx="0.00017046" ixy="-1.5263E-08" ixz="2.7006E-07" iyy="0.00023937"
                    iyz="4.4134E-07" izz="0.00023946" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.89804 0.91765 0.92941 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_link.stl" />
                </geometry>
            </collision>
        </link>
        <link name="head_yaw_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0.060943 -0.0042049 0.013422" />
                <mass value="0.3007" />
                <inertia ixx="0.00017407" ixy="5.4933E-07" ixz="1.9726E-07" iyy="0.0002335"
                    iyz="-4.3666E-07" izz="0.00023763" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_yaw_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.89804 0.91765 0.92941 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_yaw_link.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="head_yaw_joint" type="revolute">
            <!-- <origin rpy="0 0 0" xyz="0 0 0"/> -->
            <origin rpy="0 0 0" xyz="0 0 0.0746" />
            <parent link="head_link" />
            <child link="head_yaw_link" />
            <axis xyz="0 0 1" />
            <!-- Constrain the yaw motor (-90, +90) -->
            <limit effort="60" lower="${-M_PI/2}" upper="${M_PI/2}" velocity="1.5" />
            <dynamics damping="0.5" friction="0" />
        </joint>
        <link name="head_pitch_link">

            <inertial>
                <origin rpy="0 0 0" xyz="0.046748 0.0077596 -0.033083" />
                <mass value="0.56901" />
                <inertia ixx="0.0032613" ixy="8.7738E-06" ixz="-2.3333E-06" iyy="0.0031112"
                    iyz="1.3221E-06" izz="0.0015503" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_pitch_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="0.89804 0.91765 0.92941 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_pitch_link.stl" />
                </geometry>
            </collision>
        </link>
        <joint name="head_pitch_joint" type="revolute">
            <origin rpy="1.5708 -1.5708 0" xyz="0.074 -0.0345 0.0146" />
            <parent link="head_yaw_link" />
            <child link="head_pitch_link" />
            <axis xyz="0 0 1" />
            <!-- Constrain the pitch motor (-70, +3) -->
            <limit effort="60" lower="-1.2217304763960306" upper="0.05235987755982988"
                velocity="1.5" />
            <dynamics damping="0.5" friction="0" />
        </joint>

        <link name="head_camera_normal_frame">
            <inertial>
                <origin rpy="0 0 0" xyz="-0.055827 0.032071 0.0047467" />
                <mass value="0.30512" />
                <inertia ixx="0.00025424" ixy="-1.1252E-06" ixz="2.9462E-05" iyy="0.00047177"
                    iyz="9.9043E-08" izz="0.00067985" />
            </inertial>
            <visual>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_camera_link.stl" />
                </geometry>
                <material name="">
                    <color rgba="1 1 1 1" />
                </material>
            </visual>
            <collision>
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="package://galbot_description/meshes/head/head_camera_link.stl" />
                </geometry>
            </collision>
        </link>

        <joint name="head_camera_normal_joint" type="fixed">
            <origin rpy="-1.5708 0 -1.5708" xyz="0.091 -0.0566 -0.0035" />
            <parent link="head_pitch_link" />
            <child link="head_camera_normal_frame" />
            <axis xyz="0 0 0" />
        </joint>

        <link name="head_camera_optical_frame"></link>

        <joint name="head_camera_optical_joint" type="fixed">
            <origin rpy="1.5708 -1.5708 0" xyz="0.091 -0.0566 -0.0035" />
            <parent link="head_pitch_link" />
            <child link="head_camera_optical_frame" />
            <axis xyz="0 0 0" />
        </joint>
    </xacro:macro>
</robot>